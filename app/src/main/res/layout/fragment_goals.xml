<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ssb_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Budget Goals"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/minGoalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Goal: R0.00"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/maxGoalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Goal: R0.00"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/setGoalsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Monthly Goals"
        android:backgroundTint="@color/ssb_gold"
        android:textColor="@color/ssb_blue"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/viewGraphButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Spending Graph"
        android:backgroundTint="@color/ssb_gold"
        android:textColor="@color/ssb_blue"
        android:padding="16dp" />
</LinearLayout>
